<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Coding Standard" xsi:noNamespaceSchemaLocation="phpcs.xsd">
    <description>Coding Standard</description>

    <file>src</file>
    <file>tests</file>

    <exclude-pattern>*/tests/*/Fixtures/*\.php$</exclude-pattern>

    <arg name="colors"/>
    <arg name="parallel" value="75"/>
    <arg value="np"/>

    <rule ref="PSR12"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
</ruleset>